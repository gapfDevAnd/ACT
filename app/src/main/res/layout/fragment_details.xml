<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.alxdevand.forecast.ui.fragment.DetailsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="-50dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/textView_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView_day"
            android:layout_toEndOf="@+id/textView_day"
            android:layout_toRightOf="@+id/textView_day"
            android:textAppearance="?attr/textAppearanceListItem"
            tools:text="05 Jul 2016" />

        <TextView
            android:id="@+id/textView_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Tue" />

        <TextView
            android:id="@+id/textView_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView_h"
            android:layout_alignStart="@+id/textView_h"
            android:layout_below="@+id/textView_h"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="50sp"
            android:textStyle="bold"
            tools:text="56" />

        <TextView
            android:id="@+id/textView_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="50sp"
            android:textStyle="bold"
            tools:text="52"
            android:layout_alignTop="@+id/textView_high"
            android:layout_alignLeft="@+id/textView_l"
            android:layout_alignStart="@+id/textView_l" />

        <TextView
            android:id="@+id/textView_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_day"
            android:layout_margin="@dimen/text_margin"
            android:textSize="22dp"
            android:textAppearance="?attr/textAppearanceListItem"
            tools:text="Cloudy" />

        <ImageView
            android:id="@+id/imageView_description"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_below="@+id/textView_text"
            android:layout_alignParentLeft="true"
            android:scaleType="fitEnd"
            android:src="@android:drawable/ic_dialog_alert" />

        <TextView
            android:id="@+id/textView_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView_date"
            android:layout_alignRight="@+id/textView_date"
            android:layout_alignTop="@+id/imageView_description"
            android:textAppearance="?attr/textAppearanceListItem"
            android:text="@string/high" />

        <TextView
            android:id="@+id/textView_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_text"
            android:layout_marginLeft="49dp"
            android:layout_marginStart="49dp"
            android:layout_toEndOf="@+id/textView_high"
            android:layout_toRightOf="@+id/textView_high"
            android:textAppearance="?attr/textAppearanceListItem"
            android:text="@string/low" />

    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>
